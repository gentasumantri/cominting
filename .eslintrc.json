{
  "root": true,
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "amd": true,
    "node": true,
    "es2020": true
  },
  "rules": {
    "max-len": ["error", 120, 2],
    "comma-dangle": ["error", "only-multiline"],
    "array-element-newline": ["error", { "minItems": 4 }],
    "linebreak-style": ["error", "unix"]
  }
}
